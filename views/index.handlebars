<div class="container">
    <div class="jumbotron">
        <img src="/assets/img/burger.png">
        <h1>Eat-Da-Burger</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>Order da Burger</h2>
            <form class="create-form" action="/" method="POST">
                <div class="form-group">
                    <label for="ca">What's da burger Name?</label>
                    <br>
                    <textarea id="quo" name="quote" rows="8" cols="40"></textarea>
                </div>
                <button type="sumbit">Submit Da Burger</button>
                </form>
        </div>
    </div>

   <div class="row">
		<div class="col-md-4 col-md-offset-1">
			<div class="panel-panel default">
				<ul class="list-group">
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-lg" type="submit"> EAT DAT BURGER! </button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	</div>
</div>

<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<div class="panel panel-default">
				<ul class="list-group">
				{{#each burgers}}
					{{#if this.devoured}}
					<li class="list-group-item">
						<p class="lead">{{this.burger_name}} </p>
					</li>
					{{/if}}
				{{/each}}
				</ul>
			</div>
		</div>
	</div>
</div>
